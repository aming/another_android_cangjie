<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.diycircuits.cangjie"
    android:versionCode="5"
    android:versionName="0.5">

    <uses-sdk android:minSdkVersion="16" android:targetSdkVersion="15" />
    
    <application android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme">

        <service android:name="InputIME"
            android:label="@string/cangjie_input_label"
            android:permission="android.permission.BIND_INPUT_METHOD" >
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>

       	    <meta-data android:name="android.view.im"
            		android:resource="@xml/method" />

        </service>
	
        <activity android:name="ImePreferenceActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        
    </application>

</manifest>
